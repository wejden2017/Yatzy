variable "root_volume_size" {
  description = "Size of the root EBS volume in gigabytes"
  type        = number
  default     = 20
}

variable "root_volume_type" {
  description = "Type of the root EBS volume"
  type        = string
  default     = "gp2"
}

variable "root_volume_name" {
  description = "Name tag for the root volume"
  type        = string
  default     = null
}

variable "ebs_volumes" {
  description = "List of EBS volumes to attach to the instance"
  type = list(object({
    device_name = string
    volume_size = number
    volume_type = string
    name        = string
  }))
  default = []
}
