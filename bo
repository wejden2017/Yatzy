- name: Copy install script to EC2
  ansible.builtin.copy:
    src: install_vtom_expect.sh
    dest: "{{ vtom_install_dir }}/install_vtom_expect.sh"
    mode: '0755'
    owner: "{{ vtom_user }}"
    group: "{{ vtom_group }}"

- name: Execute install script with expect manually
  ansible.builtin.command: >
    "{{ vtom_install_dir }}/install_vtom_expect.sh"
    "{{ vtom_install_dir }}"
    "{{ vtom_install_dir }}"
    "{{ vtom_files[3] }}"
    "{{ vtom_files[4] }}"
