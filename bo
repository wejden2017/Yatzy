#!/usr/bin/expect -f

set timeout 60

spawn /opt/absyss/vtom/bin/admn

# Menu principal
expect "commande :" { send "5\r" }

# Gestion de l'agent Visual TOM
expect "commande :" { send "5\r" }

# Confirmation arrêt du manager Visual TOM
expect "confirmez vous l'arret du manager ?" { send "o\r" }
expect "Press Return to continue" { send "\r" }

# Retour menu agent : arrêt agent Visual TOM
expect "commande :" { send "3\r" }
expect "confirmez vous l'arret de l'agent ?" { send "o\r" }
expect "Press Return to continue" { send "\r" }

# Retour menu agent : Quitter
expect "commande :" { send "q\r" }

# Retour au menu principal : arrêt des serveurs
expect "commande :" { send "3\r" }
expect "confirmez vous l'arret des serveurs ?" { send "o\r" }
expect "Press Return to continue" { send "\r" }

# Quitter complètement le menu
expect "commande :" { send "q\r" }

expect eof
