sudo cp /etc/httpd/conf/httpd.conf /etc/httpd/conf/httpd-8081.conf
sudo sed -i 's/^Listen .*/Listen 8081/' /etc/httpd/conf/httpd-8081.conf
sudo sed -i 's|DocumentRoot \"/var/www/html\"|DocumentRoot \"/var/www/html-cats\"|' /etc/httpd/conf/httpd-8081.conf

echo "PidFile /var/run/httpd-8081.pid" | sudo tee -a /etc/httpd/conf/httpd-8081.conf

sudo httpd -f /etc/httpd/conf/httpd-8081.conf -k start
