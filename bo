- name: permissions .profile VTOM
  file:
    path: "{{ item }}"
    owner: vtom
    group: vtom
  become: true
  loop:
    - "{{ vtom_install_dir }}/.profile"
    - "{{ vtom_install_dir }}/.bashrc"
    - "{{ vtom_install_dir }}/.kshrc"
  when: do_install | bool
  ignore_errors: true  


- name: Corriger les permissions de tout /opt/absyss pour vtom
  file:
    path: /opt/absyss
    owner: vtom
    group: vtom
    recurse: yes
  become: true
  when: do_install | bool
