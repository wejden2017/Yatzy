- name: Install VTOM with root privileges
  expect:
    command: "./install_vtom {{ vtom_files | last }}"
    timeout: 500
    chdir: "{{ vtom_install_dir }}"
    responses:
      'Confirmez-vous ces parametres.*installation.*\[o\]': 'o'
      'Repertoire de base.*\]': '{{ vtom_install_dir }}/vtom'
      'Definissez l.*administrateur UNIX.*\]': 'vtom'
      'Repertoire des traces.*\]': ''
      'Repertoire des fichiers logs.*\]': ''
      'Sauvegarder l.*installation existante.*\]': 'n'
      'Numero de port tcp pour tomDBd.*\]': '30001'
      'Numero de port tcp pour vtmanager.*\]': '30000'
      'appuyez sur la touche Entree': ''
  become: true
  when: do_install | bool
  register: vtom_installation
