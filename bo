# 1. Installer Apache
sudo yum install -y httpd

# 2. Modifier le port (on va écouter sur 9001)
sudo sed -i 's/^Listen 80/Listen 9001/' /etc/httpd/conf/httpd.conf

# 3. Ajouter un fichier HTML simulé
echo "<h1>Swagger App1 simulé</h1>" | sudo tee /var/www/html/index.html

# 4. Lancer Apache
sudo systemctl start httpd
sudo systemctl enable httpd

# 5. Vérifier
curl http://localhost:9001/
