---
- name: "Debug - Variables"
  debug:
    msg: "Chemin: \\\\{{ fsx_ip }}\\{{ fsx_share }}\\{{ target_folder }}"

- name: "Test simple - Créer dossier"
  win_shell: |
    New-Item -Path "\\{{ fsx_ip }}\{{ fsx_share }}\{{ target_folder }}" -ItemType Directory -Force
  register: powershell_result

- name: "Afficher résultat PowerShell"
  debug:
    var: powershell_result
