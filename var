---
- name: "Configurer Security Descriptor et permissions NTFS pour Administrator"
  shell: |
    sshpass -p "{{ fsx_admin_password }}" ssh -o StrictHostKeyChecking=no fsxadmin@{{ fsx_ip }} '
      vserver security file-directory ntfs create -vserver {{ fsx_vserver }} -ntfs-sd ADMIN_SD || true
      vserver security file-directory ntfs dacl add -vserver {{ fsx_vserver }} -ntfs-sd ADMIN_SD -access-type allow -account {{ ad_domain_name }}\\Administrator -rights full-control || true
      vserver security file-directory apply -vserver {{ fsx_vserver }} -path /{{ fsx_share }} -ntfs-sd ADMIN_SD
    '
  register: netapp_permissions_result
  ignore_errors: no
  delegate_to: localhost
  tags: [netapp_perms]

- name: "Afficher r√©sultat configuration NetApp"
  debug:
    var: netapp_permissions_result
  tags: [netapp_perms]
