---
- name: EC2 Tools Lifecycle
  hosts: tools
  become: true
  vars:
    ansible_python_interpreter: /usr/bin/python3
    do_install_mq: false
    do_start_mq: false
    do_stop_mq: false
    do_uninstall_mq: false

  roles:
    - role: ibm_mq
      when: do_install_mq or do_start_mq or do_stop_mq or do_uninstall_mq
