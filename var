vserver security file-directory policy delete -vserver cats-svm -policy-name CATS_LINUX_policy
vserver security file-directory ntfs delete -vserver cats-svm -ntfs-sd CATS_LINUX_SD


vserver security file-directory policy show -instance
vserver security file-directory ntfs show -instance


    - name: Vérifier si le DACL Administrators existe déjà
      shell: |
        sshpass -p "{{ fsx_admin_pass }}" ssh -o StrictHostKeyChecking=no {{ fsx_admin_user }}@{{ fsx_ip }} \
        "vserver security file-directory ntfs dacl show -vserver {{ fsx_vserver }} -ntfs-sd {{ ntfs_sd }} -account BUILTIN\\Administrators"
      register: check_dacl
      ignore_errors: yes
      changed_when: false

    - name: Ajouter la permission BUILTIN\Administrators s'il manque
      shell: |
        sshpass -p "{{ fsx_admin_pass }}" ssh -o StrictHostKeyChecking=no {{ fsx_admin_user }}@{{ fsx_ip }} \
        "vserver security file-directory ntfs dacl add -vserver {{ fsx_vserver }} -ntfs-sd {{ ntfs_sd }} \
         -access-type allow -account 'BUILTIN\\Administrators' -rights full-control"
      when: check_dacl.rc != 0
      register: add_admin_result
      ignore_errors: yes
