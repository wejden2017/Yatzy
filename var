- name: Download VTOM file from S3
  ansible.builtin.aws_s3:
    bucket: "{{ vtom_s3_bucket }}"
    object: "{{ item }}"
    dest: "{{ vtom_tmp_dir }}/{{ item }}"
    mode: get
  loop: "{{ vtom_files }}"
  delegate_to: localhost
  run_once: true


- name: Upload VTOM file to EC2
  copy:
    src: "{{ vtom_tmp_dir }}/{{ item }}"
    dest: "{{ vtom_tmp_dir }}/{{ item }}"
    mode: '0644'
  loop: "{{ vtom_files }}"

