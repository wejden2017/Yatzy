SELECT name,
       value,
       isses_modifiable,
       issys_modifiable
FROM v$parameter
WHERE name = 'ddl_lock_timeout';

SELECT
  l.owner, l.name, l.type,
  l.mode_held, l.mode_requested,
  s.sid, s.serial#, s.username, s.status,
  s.machine, s.program, s.sql_id
FROM dba_ddl_locks l
JOIN v$session s ON s.sid = l.session_id
WHERE l.owner='LUCA'
  AND l.name='PACK_GESTION_ACCES'
ORDER BY s.sid;

SELECT sql_fulltext
FROM v$sql
WHERE sql_id = 'TON_SQL_ID';

SELECT
  sid, serial#, username, status,
  event, state, wait_class, seconds_in_wait,
  blocking_session, blocking_session_status,
  sql_id, machine, program
FROM v$session
WHERE sid IN (286,55,289);

SELECT sql_id, sql_fulltext
FROM v$sql
WHERE sql_id IN ('gtzk5bbanqzl2','d92b7vhczgpzy');

SELECT
  l.sid,
  o.owner,
  o.object_name,
  o.object_type,
  l.lmode,
  l.request
FROM v$lock l
JOIN dba_objects o ON o.object_id = l.id1
WHERE l.type = 'TM'
  AND l.sid IN (55,289)
ORDER BY l.sid;

SELECT sid, serial#, username, osuser, machine, program, module, action, logon_time
FROM v$session
WHERE sid IN (289,55);

ALTER SYSTEM KILL SESSION '289,4067' IMMEDIATE;
SELECT *
FROM dba_ddl_locks
WHERE owner='LUCA' AND name='PACK_GESTION_ACCES';


