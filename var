- name: Install SELinux Python bindings (libselinux-python)
  ansible.builtin.raw: sudo yum install -y libselinux-python
  register: selinux_python
  changed_when: "'Complete!' in selinux_python.stdout or 'Nothing to do' in selinux_python.stdout"
  become: true

- name: Recollect facts after installing libselinux-python
  ansible.builtin.setup:
  become: true

