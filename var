# Détails sur le conteneur : code de sortie, date de démarrage/arrêt, politique de redémarrage
docker inspect -f 'Exit={{.State.ExitCode}}  Started={{.State.StartedAt}}  Finished={{.State.FinishedAt}}  Restarts={{.RestartCount}}  Policy={{.HostConfig.RestartPolicy.Name}}' ibm-mq

# Voir les logs IBM MQ
docker logs --tail=200 ibm-mq

# Vérifier si le système a tué le process (manque de mémoire)
sudo journalctl -u docker --since "5 weeks ago" | grep -i -E 'oom|killed|ibm-mq' || true
dmesg | grep -i -E 'out of memory|killed process' || true
