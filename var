# Suppression automatique du dossier existant
echo `date +%y/%m/%d` `date +%H:%M:%S` "Suppression automatique du dossier existant..." >> $LOG_FILE

# Archive script logs before cleanup
mkdir -p /opt/cats/logs_execution
find $rep_script -type f -name "*.log" -exec cp -f {} /opt/cats/logs_execution/ \; 2>/dev/null || true
echo `date +%y/%m/%d` `date +%H:%M:%S` "Script logs archived to /opt/cats/logs_execution" >> $LOG_FILE

rm -rf $rep_script
