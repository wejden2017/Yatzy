# 1. Arrêter et supprimer l'ancien conteneur
docker stop ibm-mq
docker rm ibm-mq

# 2. Créer le nouveau conteneur avec la bonne configuration
docker run -d \
  --name ibm-mq \
  --restart unless-stopped \
  -p 1414:1414 \
  -p 9443:9443 \
  -v /mnt/mqdata:/mnt/mqm \
  -e LICENSE=accept \
  -e MQ_QMGR_NAME=QM1 \
  -e MQ_ADMIN_PASSWORD=admin \
  -e MQ_DEV=true \
  -e MQ_APP_PASSWORD="" \
  ibmcom/mq:9.2.4.0-r1-amd64

# 3. Vérifier que le conteneur démarre correctement
docker ps

# 4. Suivre les logs (attendez que "Started web server" apparaisse)
docker logs -f ibm-mq
