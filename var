/* 1) Créer l’utilisateur */
CREATE USER ASARIH IDENTIFIED BY "MotDePasseFort#2025"
  DEFAULT TABLESPACE USERS
  TEMPORARY TABLESPACE TEMP;

/* 2) Donner le rôle DEV_SUPPORT_ROLE */
GRANT DEV_SUPPORT_ROLE TO ASARIH;

/* 3) Donner CREATE SESSION directement (même si déjà dans le rôle, c’est propre) */
GRANT CREATE SESSION TO ASARIH;

/* 4) Activer tous ses rôles par défaut */
ALTER USER ASARIH DEFAULT ROLE ALL;

/* 5) Attribuer des quotas sur les TBS applicatifs uniquement */
ALTER USER ASARIH QUOTA UNLIMITED ON BATCH;
ALTER USER ASARIH QUOTA UNLIMITED ON CATS_DATA;
ALTER USER ASARIH QUOTA UNLIMITED ON CATS_IDX;
ALTER USER ASARIH QUOTA UNLIMITED ON IAM_DATA;
ALTER USER ASARIH QUOTA UNLIMITED ON IAM_IDX;
ALTER USER ASARIH QUOTA UNLIMITED ON TBS_DATA_ARCH;
ALTER USER ASARIH QUOTA UNLIMITED ON TBS_DATA_JOUR;
ALTER USER ASARIH QUOTA UNLIMITED ON TBS_DATA_REF;
ALTER USER ASARIH QUOTA UNLIMITED ON TBS_IDX_ARCH;
ALTER USER ASARIH QUOTA UNLIMITED ON TBS_IDX_JOUR;
ALTER USER ASARIH QUOTA UNLIMITED ON TBS_IDX_REF;
ALTER USER ASARIH QUOTA UNLIMITED ON USERS;

/* ❌ Pas de quotas sur SYSTEM, SYSAUX, UNDO, TEMP, DBA_TOOLS */
