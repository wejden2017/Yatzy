- name: DEBUG - Search logs EVERYWHERE on the server
      ansible.builtin.shell: |
        echo "=== Searching *.log files in {{ tar_deploy_path }} ==="
        find {{ tar_deploy_path }} -type f -name "*.log" -ls 2>/dev/null
        echo ""
        echo "=== Searching buildAll* files ==="
        find {{ tar_deploy_path }} -type f -name "buildAll*" -ls 2>/dev/null
        echo ""
        echo "=== Searching *.execution.log files ==="
        find {{ tar_deploy_path }} -type f -name "*.execution.log" -ls 2>/dev/null
        echo ""
        echo "=== All files in {{ tar_deploy_path }} ==="
        ls -laR {{ tar_deploy_path }}
      register: debug_all_logs
      become: true
      ignore_errors: yes

    - name: Show where logs really are
      ansible.builtin.debug:
        var: debug_all_logs.stdout_lines
