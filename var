- name: Create tmp install directory
  file:
    path: "{{ vtom_tmp_dir }}"
    state: directory
    mode: '0755'

- name: Download VTOM install files from S3
  aws_s3:
    bucket: "{{ vtom_s3_bucket }}"
    object: "{{ item }}"
    dest: "{{ vtom_tmp_dir }}/{{ item }}"
    mode: get
  loop: "{{ vtom_files }}"
