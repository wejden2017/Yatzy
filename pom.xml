- name: "Créer les utilisateurs RW"
  win_template:
    src: create_user.ps1.j2
    dest: "C:\\Temp\\create_user_{{ user.login }}.ps1"
  loop: "{{ users_data.rw_users }}"
  loop_control:
    loop_var: user

- name: "Exécuter le script pour RW"
  win_shell: "powershell.exe -ExecutionPolicy Bypass -File C:\\Temp\\create_user_{{ user.login }}.ps1"
  loop: "{{ users_data.rw_users }}"
  loop_control:
    loop_var: user

