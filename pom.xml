- name: "Test simple création d'un groupe AD"
  win_shell: |
    if (-Not (Get-ADGroup -Filter { Name -eq 'zied' })) {
      New-ADGroup -Name 'zied' -GroupScope Global -Path "OU=Groups,DC=cats,DC=local,DC=ad"
    }
  register: create_group_result

- name: "Afficher résultat"
  debug:
    var: create_group_result
