- name: "Ajouter les utilisateurs RW au groupe CATS_RW"
  win_shell: |
    Add-ADGroupMember -Identity "{{ users_data.groups.rw_group }}" -Members "{{ user.login }}"
  loop: "{{ users_data.users.rw_users }}"
  loop_control:
    loop_var: user

- name: "Ajouter les utilisateurs RO au groupe CATS_RO"
  win_shell: |
    Add-ADGroupMember -Identity "{{ users_data.groups.ro_group }}" -Members "{{ user.login }}"
  loop: "{{ users_data.users.ro_users }}"
  loop_control:
    loop_var: user
