[defaults]
roles_path = roles
inventory = inventory
deprecation_warnings = False
host_key_checking = False

# SOLUTION : Configuration des répertoires temporaires
remote_tmp = /tmp/.ansible-$USER/tmp
local_tmp = ~/.ansible/tmp

# Configuration SSH
timeout = 30
command_timeout = 60

# Privilèges
become = true
become_method = sudo

[ssh_connection]
# Retry de connexion
retries = 3
ssh_args = -o ServerAliveInterval=30 -o ServerAliveCountMax=3 -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no

# CRITIQUE : Forcer l'utilisation de /tmp pour les opérations temporaires
control_path_dir = /tmp/.ansible-cp
