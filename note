[defaults]
roles_path = roles
inventory = inventory
deprecation_warnings = False
host_key_checking = False
become = true

# Configuration des répertoires temporaires
remote_tmp = /tmp/.ansible-$USER/tmp
local_tmp = ~/.ansible/tmp

# Configuration SSH
timeout = 30

[ssh_connection]
# SOLUTION : Forcer le PATH correct et éviter les scripts de profil problématiques
ssh_args = -o ServerAliveInterval=30 -o ServerAliveCountMax=3 -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no
pipelining = True
retries = 3

# CRITIQUE : Forcer l'environnement PATH correct
[inventory]
[privilege_escalation]

export PATH="/bin:/usr/bin:/usr/local/bin:/sbin:/usr/sbin:$PATH"
