output "cats_api_gateway_urls" {
  description = "Exposed API Gateway URLs for all CATS services"
  value = {
    catsweb     = "${module.api_gateway_rest_cats.rest_api_url}/catsweb"
    catsbackend = "${module.api_gateway_rest_cats.rest_api_url}/catsbackend"
    concorde    = "${module.api_gateway_rest_cats.rest_api_url}/concorde"
  }
}


output "catsweb_url"     { value = "https://${aws_api_gateway_rest_api.this.id}.execute-api.${var.region}.amazonaws.com/catsweb" }
output "catsbackend_url" { value = "https://${aws_api_gateway_rest_api.this.id}.execute-api.${var.region}.amazonaws.com/catsbackend" }
output "concorde_url"    { value = "https://${aws_api_gateway_rest_api.this.id}.execute-api.${var.region}.amazonaws.com/concorde" }
