

- name: Deploy insert_services.j2 template to remote (optionnel)
  ansible.builtin.template:
    src: insert_services.j2
    dest: "{{ vtom_install_dir }}/insert_services.j2"
    owner: root
    group: root
    mode: '0644'
- name: Insert VTOM ports into /etc/services
  ansible.builtin.blockinfile:
    path: /etc/services
    marker: "# {mark} ANSIBLE MANAGED BLOCK - VTOM PORTS"
    insertafter: EOF
    block: "{{ lookup('template', 'vtom_server/templates/insert_services.j2') }}"
    create: yes
    backup: yes
  become: true
